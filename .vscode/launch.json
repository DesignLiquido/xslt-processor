    "version": "0.2.0",
    "configurations": [
        {
            "name": "Unit tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/jest/bin/jest.js",
                // "include.test",
                "--runInBand",
                "--testTimeout=100000000"
            ],
            "skipFiles": ["<node_internals>/**", "node_modules/**"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}