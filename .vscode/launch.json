{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Unit tests",
            "type": "pwa-node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand",
                "--no-cache",
                "--testTimeout=100000000"
            ],
            "runtimeArgs": [
                "--inspect-brk"
            ],
            "smartStep": false,
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "sourceMaps": true,
            "autoAttachChildProcesses": false,
            "disableOptimisticBPs": true,
            "justMyCode": true,
            "stopOnEntry": false,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js",
                "!**/node_modules/**"
            ],
            "env": {
                "NODE_OPTIONS": ""
            }
        },
        {
            "name": "Debug Jest Tests",
            "type": "pwa-node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand",
                "--no-cache",
                "--testTimeout=100000000",
                "${fileBasename}"
            ],
            "runtimeArgs": [
                "--inspect-brk"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "smartStep": true,
            "sourceMaps": true,
            "autoAttachChildProcesses": false,
            "disableOptimisticBPs": true,
            "justMyCode": true,
            "stopOnEntry": false,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js",
                "!**/node_modules/**"
            ],
            "env": {
                "NODE_OPTIONS": ""
            }
        },
        {
            "name": "Launch TS file",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${file}"
            ],
            "env": {
                "TS_NODE_PROJECT": "${workspaceRoot}/tsconfig.debug.json"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}