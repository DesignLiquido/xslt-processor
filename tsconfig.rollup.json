{
    "compilerOptions": {
        "jsx": "preserve",
        "outDir": "dist",
        "target": "ES5",
        "rootDir": "src",
        "allowJs": true,
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "babel.config.js",
        "jest.config.ts",
        "rollup.config.js",
        "dist/**/*",
        "test_src/**/*",
        "tests/**/*"
    ]
}