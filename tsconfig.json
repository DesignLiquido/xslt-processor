{
    "compilerOptions": {
        "jsx": "preserve",
        "outDir": "dist",
        "module": "esnext",
        "target": "ES2017",
        "rootDir": ".",
        "allowJs": true,
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "NodeNext"
    },
    "exclude": [
        "babel.config.js",
        "dist/**/*"
    ]
}